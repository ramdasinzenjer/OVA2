<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/bt_roadsideasst"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_getestimate"
        android:layout_below="@+id/bt_getestimate"
        android:layout_marginTop="40dp"
        android:background="@color/common_signin_btn_default_background"
        android:text="Roadside Assistance"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/bt_garage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:background="@color/common_signin_btn_default_background"
        android:text="Garage"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/bt_getestimate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_garage"
        android:layout_below="@+id/bt_garage"
        android:layout_marginTop="46dp"
        android:background="@color/common_signin_btn_default_background"
        android:text="Get an Estimate"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

</RelativeLayout>